@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin Blog Listesi</h2>
<br/>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yorumlar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BlogID</td>
            <td>@item.BlogTitle</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.BlogDate.ToShortDateString()</td>
            <td><a href="" class="btn btn-danger">Sil</a></td>
            <td><a href="" class="btn btn-success">Güncelle</a></td>
            <td><a href="" class="btn btn-warning">Detaylar</a></td>
            <td><a href="" class="btn btn-info">Yorumlar</a></td>
        </tr>
    }
</table>
<a href="" class="btn btn-primary">Yeni Blog Ekle</a>