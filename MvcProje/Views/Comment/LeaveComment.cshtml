
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir Yorum Yazın</h3>
    <form method="post" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Kullanıcı Adınız</label>
            <input type="text" class="form-control" name="UserName">
        </div>
        <div class="form-group">
            <label for="email">Email *</label>
            <input type="email" class="form-control" name="Mail">
        </div>
        <input name="CommentDate" type="hidden" value="@DateTime.Now.ToShortDateString()"/>
        <input name="BlogID" type="hidden" value="@ViewBag.id"/>

        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea name="CommentText" id="message" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn btn-primary">
        </div>

    </form>
</div>